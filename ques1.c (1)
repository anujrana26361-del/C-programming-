#include<stdio.h>
int main(){
    int n,r;
    printf("enter a number=");
    scanf("%d",&n);
    int rev=0;
    int temp=n;
    while(n>0){
        r=n%10;
     
    
        rev=rev*10+r;
        n=n/10;
    }
    
        if(temp==rev){
    
   
    printf("%d",temp);
        }
        else 
        printf("invalid");
    
    return 0;
}
    